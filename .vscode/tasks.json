{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "serve",
            "type": "shell",
            "command": "/usr/bin/deno",
            "args": [
                "run",
                "--allow-all",
                "https://deno.land/std@0.177.0/http/file_server.ts",
                "--port",
                "8000"
            ],
            "options": {
                "cwd": "${workspaceFolder}/output"
            },
            "problemMatcher": []
        },

        {
            "label": "run",
            "type": "shell",
            "command": "/usr/bin/deno",
            "args": [
                "run",
                "--allow-read",
                "--allow-write",
                "--allow-env=VSCODE_TEXTMATE_DEBUG",
                "${workspaceFolder}/main.ts",
                "https://mydumbsite.net"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },

        {
            "label": "publish",
            "type": "shell",
            "command": "~/.local/share/npm/bin/netlify",
            "args": [
                "deploy",
                "--prod",
                "--dir=output"
            ],
            "dependsOn": [
                "run"
            ],
            "problemMatcher": []
        },

        {
            "label": "Open in Browser",
            "type": "shell",
            "command": "xdg-open",
            "args": [
                "http://localhost:8000"
            ],
            "problemMatcher": [],
        },
    ]
}
